<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <% if user_signed_in? %>
      <p>Author: <%= post.user.name %></p> <!-- Display author's name if user is signed in -->
    <% end %>
  </div>
<% end %>

<div class="actions">
  <% if user_signed_in? %>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= button_to "Sign in", new_user_session_path %>
  <% end %>
</div>


